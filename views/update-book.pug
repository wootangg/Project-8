extends layout

block content
  h1= title

  include form-errors

  form(action=`/books/${id}/`, method='post')
    p
      label(for="title") Title
      input(
        name="title"
        type="text"
        id="title"
        value= book.title
      )
    p
      label(for="author") Author
      input(
        name="author"
        type="text"
        id="author"
        value= book.author
      )
    p
      label(for="title") Genre
      input(
        name="genre"
        type="text"
        id="genre"
        value= book.genre
      )
    p
      label(for="title") Year
      input(
        name="year"
        type="text"
        id="year"
        value= book.year
      )
    p
      input(
        type="submit"
        value="Update Book"
      )
    p
      a(
        class="button"
        href="/books"
      ) Cancel
  form(action=`/books/${id}/delete`, method='post')
    p
      input(
        type="submit"
        value="Delete Book"
      )
